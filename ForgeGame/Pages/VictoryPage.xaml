<Page x:Class="ForgeGame.Pages.VictoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ForgeGame.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="VictoryPage">

    <Grid Name="grid">
        <Image Name="img" HorizontalAlignment="Left" Height="1080" VerticalAlignment="Top" Width="1920"/>
        <Label Name="lbl_name" Content="Congratulations, " HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="0,830,0,0" VerticalAlignment="Top" Height="125" Width="1910" FontFamily="Old English Text MT" FontSize="72" Background="#E5000000" Foreground="#FF1B89E4"/>
        <Label Content="You are the supreme vampire hunter!" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="0,955,0,0" VerticalAlignment="Top" Height="125" Width="1910" FontFamily="Old English Text MT" FontSize="72" Background="#E5000000" Foreground="#FF1B89E4"/>
        <Button x:Name="btn_exit" Content="X" HorizontalAlignment="Left" Margin="1810,10,0,0" VerticalAlignment="Top" Width="70" Background="#FFCB0000" BorderBrush="#FF420000" Foreground="White" FontFamily="Palatino Linotype" FontSize="60" Height="85" Click="Btn_exit_Click"/>

    </Grid>
</Page>
